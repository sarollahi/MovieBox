<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.sarollahi.moviebox">

    <!-- Include required permissions for Google Mobile Ads to run. -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher_foreground"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:versionCode="15"
        android:versionName="1.2.1">
        <activity android:name="com.aastudio.sarollahi.moviebox.Activities.BigImageActivity"></activity>
        <activity android:name="com.aastudio.sarollahi.moviebox.Activities.BackupRestoreActivity" />
        <activity android:name="com.aastudio.sarollahi.moviebox.Activities.SearchMovieByActorIdActivity" />
        <activity android:name="com.aastudio.sarollahi.moviebox.Activities.SearchByActorActivity" />
        <activity android:name="com.aastudio.sarollahi.moviebox.Activities.BestGenreActivity" />
        <activity android:name="com.aastudio.sarollahi.moviebox.Activities.SeenMoviesActivity" />
        <activity android:name="com.aastudio.sarollahi.moviebox.Activities.FavoriteActivity" />
        <activity android:name="com.aastudio.sarollahi.moviebox.Activities.SeenTvActivity" />
        <activity android:name="com.aastudio.sarollahi.moviebox.Activities.SeasonActivity" />
        <activity
            android:name="com.aastudio.sarollahi.moviebox.Activities.TvDetailActivity"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity android:name="com.aastudio.sarollahi.moviebox.Activities.SearchActivity" />
        <activity android:name="com.aastudio.sarollahi.moviebox.Activities.PersonActivity" />
        <activity
            android:name="com.aastudio.sarollahi.moviebox.Activities.DetailActivity"
            android:theme="@style/AppTheme.ActionBar.Transparent" />
        <activity
            android:name="com.aastudio.sarollahi.moviebox.Activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>