<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageButton
        android:id="@+id/play_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="11dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/baseline_live_tv_24" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/baseline_arrow_back_24" />

    <com.github.ivbaranov.mfb.MaterialFavoriteButton
        android:id="@+id/seen_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@id/moviePoster"
        android:layout_toLeftOf="@id/favorite_button"
        app:mfb_animate_favorite="true"
        app:mfb_bounce_duration="700"
        app:mfb_color="black"
        app:mfb_favorite_image="@drawable/baseline_visibility_off_24"
        app:mfb_not_favorite_image="@drawable/baseline_visibility_24"
        app:mfb_rotation_angle="200"
        app:mfb_rotation_duration="400"
        app:mfb_type="heart" />


    <com.github.ivbaranov.mfb.MaterialFavoriteButton
        android:id="@+id/favorite_button"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@id/moviePoster"
        android:layout_toLeftOf="@id/play_button"
        app:mfb_animate_favorite="true"
        app:mfb_bounce_duration="700"
        app:mfb_color="black"
        app:mfb_favorite_image="@drawable/baseline_favorite_border_24"
        app:mfb_not_favorite_image="@drawable/baseline_favorite_24"
        app:mfb_rotation_angle="200"
        app:mfb_rotation_duration="400"
        app:mfb_type="heart" />

</RelativeLayout>