<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <ImageView
        android:id="@+id/id_index_actors_image"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="2dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/id_index_actors_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/id_index_actors_image"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textAlignment="center"
        android:background="#33FF0000"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#fff"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/id_index_actors_character"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_index_actors_image"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#000"
        android:textSize="12sp" />

</RelativeLayout>